{
  "name": "@ammarahmedca/chess-engine",
  "version": "0.1.3",
  "description": "Custom built Chess engine built as a learning exercise for myself!",
  "main": "dist/cjs/index.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": "https://github.com/ammar-ahmed22/chess-engine.git",
  "author": "Ammar Ahmed <ammar.ahmed1@uwaterloo.ca>",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.20",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "rollup": "^4.12.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-generate-package-json": "^3.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@engine-types/(.*)$": "<rootDir>/src/types/engine/$1",
      "^@component-types/(.*)$": "<rootDir>/src/types/components/$1"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "scripts": {
    "build": "yarn rollup",
    "test": "jest",
    "format": "prettier --write .",
    "clean": "rimraf ./dist",
    "rollup": "yarn clean && rollup -c --bundleConfigAsCjs",
    "postbuild": "node ./scripts/postBuild.js"
  },
  "dependencies": {}
}
