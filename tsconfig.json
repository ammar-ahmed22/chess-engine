{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "declaration": true,
    "jsx": "react",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@engine-types": ["./src/types/engine/index"],
      "@component-types": ["./src/types/components/index"]
    },
    "moduleResolution": "node",
    "declarationDir": "./dist",
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.spec.ts", "testing", "scripts"]
}